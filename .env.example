# ============================================
# RUN YOUR TRIP - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ============================================

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database
PGDATABASE=your_database_name
PGHOST=your_database_host
PGPORT=5432
PGUSER=your_database_user
PGPASSWORD=your_database_password

# ============================================
# SESSION & AUTHENTICATION
# ============================================
SESSION_SECRET=your_session_secret_key_here

# Admin Panel Authentication
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
ADMIN_PASSWORD=your_admin_password_here
MANAGEMENT_SECRET=your_management_secret_here

# ============================================
# AI SERVICES
# ============================================
# OpenAI (for template generation)
OPENAI_API_KEY=sk-your_openai_api_key

# Google AI / Gemini
GOOGLE_AI_API_KEY=your_google_ai_key
GEMINI_API_KEY=your_gemini_api_key

# Perplexity AI
PERPLEXITY_API_KEY=your_perplexity_key

# AssemblyAI (audio transcription)
ASSEMBLYAI_API_KEY=your_assemblyai_key

# Abacus AI
ABACUS_API_KEY=your_abacus_key

# ============================================
# EXTERNAL SERVICES
# ============================================
# GoDaddy DNS Management
GODADDY_API_KEY=your_godaddy_api_key
GODADDY_API_SECRET=your_godaddy_api_secret
GODADDY_ENVIRONMENT=production

# GoDaddy OTE (Test Environment) - Optional
OTE_GODADDY_API_KEY=your_ote_godaddy_key
OTE_GODADDY_API_SECRET=your_ote_godaddy_secret

# Notion Integration
NOTION_API_KEY=your_notion_api_key

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_your_stripe_publishable_key

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token

# ============================================
# REPLIT SPECIFIC (auto-configured on Replit)
# ============================================
# These are automatically set when running on Replit
# REPLIT_DOMAINS=your-app.replit.app
# REPLIT_DEV_DOMAIN=your-dev-domain.replit.dev
# REPL_ID=your_repl_id

# Object Storage
# DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
